{
  "name": "Package",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "enum": [ "library", "project", "metapackage", "composer-plugin"]
    },
    "target-dir": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "homepage": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "time": {
      "type": "string"
    },
    "license": {
      "oneOf": [
        { "enum": [ "MIT", "BSD" ] },
        { "type": "array", "items": { "enum": [ "MIT", "BSD" ] } }
      ]
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "homepage": {
            "type": "string"
          },
          "role": {
            "type": "string"
          }
        }
      }
    },
    "require": {
      "type": "object"
    },
    "replace": {
      "type": "object"
    },
    "conflict": {
      "type": "object"
    },
    "provide": {
      "type": "object"
    },
    "require-dev": {
      "type": "object"
    },
    "suggest": {
      "type": "object"
    },
    "config": {
      "type": "object",
      "properties": {
        "process-timeout": {
          "type": "integer"
        },
        "use-include-path": {
          "type": "boolean"
        },
        "preferred-install": {
          "enum": [ "source", "dist", "auto" ]
        },
        "notify-on-install": {
          "type": "boolean"
        },
        "github-protocols": {
          "type": "array",
          "items": {
            "enum": [ "git", "https", "http" ]
          }
        },
        "github-oauth": {
          "type": "object"
        },
        "http-basic": {
          "type": "object"
        },
        "store-auths": {
          "oneOf": [
            { "type": "boolean" },
            { "enum": ["prompt"] }
          ]
        },
        "vendor-dir": {
          "type": "string"
        },
        "bin-dir": {
          "type": "string"
        },
        "cache-dir": {
          "type": "string"
        },
        "cache-files-dir": {
          "type": "string"
        },
        "cache-repo-dir": {
          "type": "string"
        },
        "cache-vcs-dir": {
          "type": "string"
        },
        "cache-ttl": {
          "type": "integer"
        },
        "cache-files-ttl": {
          "type": "integer"
        },
        "cache-files-maxsize": {
          "type": ["string", "integer"]
        },
        "discard-changes": {
          "type": ["string", "boolean"],
          "oneOf": [
            { "type": "boolean" },
            { "enum": ["stash"] }
          ]
        },
        "autoloader-suffix": {
          "type": "string"
        },
        "optimize-autoloader": {
          "type": "boolean"
        },
        "prepend-autoloader": {
          "type": "boolean"
        },
        "github-domains": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "github-expose-hostname": {
          "type": "boolean"
        }
      }
    },
    "extra": {
      "type": ["object", "array"]
    },
    "autoload": {
      "type": "object",
      "properties": {
        "psr-0": {
          "type": "object"
        },
        "psr-4": {
          "type": "object"
        },
        "classmap": {
          "type": "array"
        },
        "files": {
          "type": "array"
        }
      }
    },
    "autoload-dev": {
      "type": "object",
      "properties": {
        "psr-0": {
          "type": "object"
        },
        "psr-4": {
          "type": "object"
        },
        "classmap": {
          "type": "array"
        },
        "files": {
          "type": "array"
        }
      }
    },
    "archive": {
      "type": ["object"],
      "properties": {
        "exclude": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "repositories": {
      "type": ["object", "array"]
    },
    "minimum-stability": {
      "enum": [ "dev", "alpha", "beta", "RC", "stable" ]
    },
    "prefer-stable": {
      "type": ["boolean"]
    },
    "bin": {
      "type": ["array"],
      "items": {
        "type": "string"
      }
    },
    "include-path": {
      "type": ["array"],
      "items": {
        "type": "string"
      }
    },
    "scripts": {
      "type": ["object"],
      "properties": {
        "pre-install-cmd": {
          "type": ["array", "string"]
        },
        "post-install-cmd": {
          "type": ["array", "string"]
        },
        "pre-update-cmd": {
          "type": ["array", "string"]
        },
        "post-update-cmd": {
          "type": ["array", "string"]
        },
        "pre-status-cmd": {
          "type": ["array", "string"]
        },
        "post-status-cmd": {
          "type": ["array", "string"]
        },
        "pre-package-install": {
          "type": ["array", "string"]
        },
        "post-package-install": {
          "type": ["array", "string"]
        },
        "pre-package-update": {
          "type": ["array", "string"]
        },
        "post-package-update": {
          "type": ["array", "string"]
        },
        "pre-package-uninstall": {
          "type": ["array", "string"]
        },
        "post-package-uninstall": {
          "type": ["array", "string"]
        },
        "pre-autoload-dump": {
          "type": ["array", "string"]
        },
        "post-autoload-dump": {
          "type": ["array", "string"]
        },
        "post-root-package-install": {
          "type": ["array", "string"]
        },
        "post-create-project-cmd": {
          "type": ["array", "string"]
        }
      }
    },
    "support": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "issues": {
          "type": "string"
        },
        "forum": {
          "type": "string"
        },
        "wiki": {
          "type": "string"
        },
        "irc": {
          "type": "string"
        },
        "source": {
          "type": "string"
        }
      }
    }
  }
}